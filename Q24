#include<stdio.h>
#include<conio.h>
#include<pthread.h>

int main()
{
	int allocated[5][4]={{0,0,1,2},		 
			     {1,0,0,0},
			     {1,3,5,4},
		 	     {0,6,3,2},
			     {0,0,1,4}};
	
	int max[5][4]={{0,0,1,2},
		       {1,7,5,0},
		       {2,3,5,6},
		       {0,6,5,2},
		       {0,6,5,6}};
	
	int avail[4]={1,5,2,0};
	
	int need[5][4];
	
	int i,j;
	
	for(i=0;i<5;i++)
	{
		printf("Need of %d process is ",i);
		for(j=0;j<4;j++)
		{
			need[i][j]=max[i][j]-allocated[i][j];
			printf("%d",need[i][j]);
		}
		printf("\n");
	}
	
	
	getch();
	
}
